   <div class="container-fluid bg-dark text-light py-5 vh-100">
     <div class="row justify-content-center align-items-center h-100">
       <div class="col-md-8 text-center">
         <h2>Welcome <%= user.name %></h2>
   
         <div class="profile-image mt-4">
           <img src="userImages/<%= user.image %>" alt="<%= user.image %>" class="rounded-circle" width="150px" height="150px" />
         </div>
   
         <div class="profile-info mt-4">
           <table class="table table-dark table-striped">
             <tbody>
               <tr>
                 <th scope="row">Name</th>
                 <td><%= user.name %></td>
               </tr>
               <tr>
                 <th scope="row">Email</th>
                 <td><%= user.email %></td>
               </tr>
               <tr>
                 <th scope="row">Mobile</th>
                 <td><%= user.mobile %></td>
               </tr>
             </tbody>
           </table>
         </div>
   
         <div class="profile-actions mt-4">
           <a href="/edit?id=<%= user._id %>" class="btn btn-primary mr-2">Edit</a>
           <a href="/logout" class="btn btn-danger">Logout</a>
         </div>
       </div>
     </div>
   </div>
   
